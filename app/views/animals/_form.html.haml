= turbo_frame_tag "modal" do
  .modal-header
    %h5.modal-title= "Editing #{@animal.name}"
    %button.btn-close{ type: "button", data: { "bs-dismiss": "modal" }, aria: { label: "Close" } }
  .modal-body
    = form_for @animal do |f|
      - if @animal.errors.any?
        #error_explanation.alert.alert-danger
          %h2= "#{pluralize(@animal.errors.count, 'error')} prohibited this animal from being saved:"
          %ul
            - @animal.errors.full_messages.each do |message|
              %li= message

      .mb-3
        = f.label :name, class: "form-label"
        = f.text_field :name, class: "form-control"

      .mb-3
        = f.label :species, class: "form-label"
        = f.text_field :species, class: "form-control"

      .mb-3
        = f.label :birth_date, class: "form-label"
        = f.date_field :birth_date, class: "form-control"

      .form-check.mb-3
        = f.label :active, class: "form-check-label"
        = f.check_box :active, class: "form-check-input"

      .actions
        = f.submit 'Save', class: "btn btn-primary"
  .modal-footer
    %button.btn.btn-secondary{ type: "button", data: { "bs-dismiss": "modal" } } Close

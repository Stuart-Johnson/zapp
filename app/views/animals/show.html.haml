%p#notice= notice


.card
  .card-body
    %h5.card-title= @animal.name

    %p
      %b Name:
      = @animal.name
    %p
      %b Species:
      = @animal.species
    %p
      %b Birth date:
      = @animal.birth_date
    %p
      %b Active:
      = @animal.active ? 'Active' : 'Archived'

    = link_to 'Edit', edit_animal_path(@animal), class: 'btn btn-warning'
    = link_to 'Back to Animals List', animals_path, class: 'btn btn-light'
